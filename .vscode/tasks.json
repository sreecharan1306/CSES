{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Python with input.txt",
        "type": "shell",
        "command": "python",
        "args": [
        "${file}",
        "<",
        "${fileDirname}/input.txt",
        ">",
        "${fileDirname}/output.txt"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [],
        "detail": "This task runs the active Python file with input and output redirection.",
        "options": {
            "shell": {
                "executable": "cmd.exe"
            }
        }
      },
      {
        "label": "Run C++ with input.txt",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}",
          "-o",
          "${fileDirname}/a.out",
          "&&",
          "${fileDirname}/a.out",
          "<",
          "input.txt",
          ">",
          "output.txt"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [],
        "detail": "This task compiles and runs the active C++ file with input and output redirection."
      }
    ]
  }
  